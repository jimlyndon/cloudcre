@model Cloudcre.Service.Property.ViewModels.RetailViewModel

@{
    ViewBag.Title = "Cloud CRE - Edit retail property";
    Layout = "~/Views/Shared/Property/_Layout_Property_Edit.cshtml";
}

@section scripts {
    <script type="text/javascript">
        window.cloudcre.routing.urls({
            action: '@Url.Action("Edit", "Retail")',
            model: '@Url.Action("Model", "Retail", new { Model.Id })'
        });
    </script>
    <script type="text/html" id="template">
        @using (Html.BeginForm("Edit", "Retail", FormMethod.Post, new { id = "dialog-form", @class = "wufoo" }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.Partial("_Template")
        }
    </script>
}